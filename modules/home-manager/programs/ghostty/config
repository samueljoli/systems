# UI
adjust-cursor-thickness = 2
cursor-color = #ff0055
font-family = Roboto Mono Bold
font-family-bold = Roboto Mono Bold
font-size = 18
font-thicken = true
theme = Gruvbox Dark Hard

# Behavior

# Splits
keybind = cmd+j=new_split:down
keybind = cmd+k=new_split:up
keybind = cmd+h=new_split:left
keybind = cmd+l=new_split:right

# Navigate splits
keybind = ctrl+option+j=goto_split:bottom
keybind = ctrl+option+k=goto_split:top
keybind = ctrl+option+h=goto_split:left
keybind = ctrl+option+l=goto_split:right
