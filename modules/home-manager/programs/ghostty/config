# UI
adjust-cursor-thickness = 2
cursor-color = #ff0055
font-family = Roboto Mono Bold
font-family-bold = Roboto Mono Bold
font-size = 18
font-thicken = true
theme = GruvboxDarkHard

# Behavior
keybind = global:cmd+enter=new_split:down
keybind = global:ctrl+j=goto_split:bottom
keybind = global:ctrl+k=goto_split:top
keybind = global:ctrl+h=goto_split:left
keybind = global:ctrl+l=goto_split:right


